<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" spacing="15" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.HomeController">

    <Label text="Sport Scheduling App Home Page" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
    <Button text="Reserve/Cancel Time" fx:id="reserveCancelButton" onAction="#onManageBookingTimeClicked" />
    <Button text="Rent Equipment" fx:id="rentEquipButton" onAction="#onRentEquipClicked" />
    <Button text="Change Sport" onAction="#changeSport" />
    <Button text="Logout" onAction="#logout" />
    <Label text="Status: Ready" fx:id="statusLabel" style="-fx-font-size: 14px; -fx-text-fill: green;" />
</VBox>