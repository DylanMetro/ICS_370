<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" spacing="15" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.BookingController">

    <padding>
        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
    </padding>

    <DatePicker fx:id="datePicker" onAction="#onDateSelected"/>
    <ListView fx:id="bookingListView" prefHeight="200" prefWidth="300"/>

    <Button text="Book Time" onAction="#onBookTime"/>
    <Button text="Cancel My Booking" onAction="#onCancelBookingTime"/>
    <Button text="Show Players" onAction="#onShowPlayers"/>
    <Button onAction="#goToHomeScreen" text="Home" />
    <Button text="Change Sport" onAction="#changeSport" />
    <Button text="Logout" onAction="#logout" />


    <Label text="Status: Ready" fx:id="statusLabel" style="-fx-font-size: 14px; -fx-text-fill: green;" />
</VBox>