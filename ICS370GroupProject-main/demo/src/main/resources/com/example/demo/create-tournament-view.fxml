<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="700.0" prefWidth="900.0" spacing="15.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.CreateTournamentController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="Tournament Management">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <HBox alignment="TOP_CENTER" spacing="40.0">
            <children>
                <VBox alignment="TOP_CENTER" spacing="10.0">
                    <children>
                        <Label text="Create New Tournament">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>
                        <TextField fx:id="tournamentNameField" maxWidth="300.0" promptText="Tournament Name" />
                        <DatePicker fx:id="startDatePicker" promptText="Select Start Date" />
                        <Button onAction="#createTournament" text="Create Tournament" />
                    </children>
                </VBox>
                <VBox alignment="TOP_CENTER" spacing="10.0">
                    <children>
                        <Label text="Existing Tournaments">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>
                        <TableView fx:id="tournamentsTable" prefHeight="200.0" prefWidth="400.0">
                            <columns>
                                <TableColumn fx:id="tournamentNameColumn" prefWidth="200.0" text="Name" />
                                <TableColumn fx:id="tournamentDateColumn" prefWidth="100.0" text="Start Date" />
                                <TableColumn fx:id="tournamentStatusColumn" prefWidth="100.0" text="Status" />
                            </columns>
                        </TableView>
                        <Button fx:id="deleteTournamentButton" onAction="#deleteTournament" text="Delete Selected Tournament" />
                        <Button fx:id="generateMatchesButton" onAction="#generateMatches" text="Generate Matches for Selected" />
                    </children>
                </VBox>
            </children>
        </HBox>
        <Label fx:id="statusLabel" />
        <HBox alignment="CENTER" spacing="10.0">
            <children>
                <Button onAction="#goToHomeScreen" text="Home" />
                <Button onAction="#changeSport" text="Change Sport" />
                <Button onAction="#logout" text="Logout" />
            </children>
            <VBox.margin>
                <Insets top="50.0" />
            </VBox.margin>
        </HBox>
    </children>
</VBox>