<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" spacing="15" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.RegistrationController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label text="User Registration" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
    <TextField fx:id="usernameField" promptText="Username" maxWidth="200"/>
    <PasswordField fx:id="passwordField" promptText="Password" maxWidth="200"/>
    <Button text="Register" onAction="#registerUser" />
    <Button text="Back to Login" onAction="#goToLogin" />
    <Label fx:id="statusLabel" style="-fx-text-fill: red;" />
</VBox>