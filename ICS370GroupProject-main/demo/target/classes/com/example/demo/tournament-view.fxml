<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="700.0" prefWidth="950.0" spacing="10.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.TournamentViewController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <children>
        <Label text="Tournaments">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <HBox spacing="20.0" VBox.vgrow="ALWAYS">
            <children>
                <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="Open for Registration">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>
                        <TableView fx:id="tournamentsTable">
                            <columns>
                                <TableColumn fx:id="tournamentNameColumn" prefWidth="250.0" text="Tournament Name" />
                                <TableColumn fx:id="tournamentDateColumn" prefWidth="120.0" text="Start Date" />
                            </columns>
                        </TableView>
                        <Button fx:id="registerTeamButton" onAction="#registerTeam" text="Register Team for Selected Tournament" />
                    </children>
                </VBox>
                <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Label fx:id="matchesLabel" text="Matches (Select a tournament to view)">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>
                        <TableView fx:id="matchesTable">
                            <columns>
                                <TableColumn fx:id="team1Column" prefWidth="120.0" text="Team 1" />
                                <TableColumn fx:id="team2Column" prefWidth="120.0" text="Team 2" />
                                <TableColumn fx:id="matchDateColumn" prefWidth="150.0" text="Match Date" />
                                <TableColumn fx:id="scoreColumn" prefWidth="120.0" text="Score" />
                            </columns>
                        </TableView>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label text="Team 1 Score:" />
                                <TextField fx:id="team1ScoreField" prefWidth="50.0" />
                                <Label text="Team 2 Score:" />
                                <TextField fx:id="team2ScoreField" prefWidth="50.0" />
                                <Button fx:id="submitScoreButton" onAction="#submitScore" text="Submit Score" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </HBox>
        <Label fx:id="statusLabel" />
        <HBox alignment="CENTER" spacing="10.0">
            <children>
                <Button onAction="#goToHomeScreen" text="Home" />
                <Button onAction="#changeSport" text="Change Sport" />
                <Button onAction="#logout" text="Logout" />
            </children>
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
        </HBox>
    </children>
</VBox>